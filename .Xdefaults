!Xft.dpi: 75
Xft.hintstyle: hintmedium
Xft.hinting: true

! ---------[ xterm ] ---------
xterm*loginShell:true
xterm*foreground: black
!xterm*foreground: lightgrey
xterm*background: white
xterm*shading: 50

!red
xterm*color1: #EA6868
xterm*color9: #FF7272
!green
xterm*color2: #ABCB8D
xterm*color10: #AFD78A
!yellow
xterm*color3: #E8AE5B
xterm*color11: #FFA75D
!blue
xterm*color4: #71C5F4
xterm*color12: #67CDE9
!magenta
!xterm*color5: #E2BAF1
!xterm*color13: #ECAEE9
!cyan
xterm*color6: #21F1EA
xterm*color14: #36FFFC
!white
xterm*color7: #F1F1F1
xterm*color15: #FFFFFF

xterm*faceName:        Bleed 2
xterm*faceSize:        10
xterm*font:	       fixed
xterm*utf8:	       1
xterm*locale:	       true
xterm*geometry:	      90x22
!xterm*font	:     -bitstream-bitstream vera sans mono-*-*-*-*-*-*-*-*-*-*-*-*
xterm*scrollBar:	  false
xterm*saveLines:	2000
xterm*eightBitInput: false


! ---------[ URxvt ] ---------
URxvt*loginShell    :true
URxvt*foreground: lightgrey
URxvt*background: black
URxvt*shading       : 75

!red
URxvt*color1: #EA6868
URxvt*color9: #FF7272
!green
URxvt*color2: #ABCB8D
URxvt*color10: #AFD78A
!yellow
URxvt*color3: #E8AE5B
URxvt*color11: #FFA75D
!blue
URxvt*color4: #71C5F4
URxvt*color12: #67CDE9
!magenta
URxvt*color5: #E2BAF1
!URxvt*color13: #ECAEE9
!cyan
URxvt*color6: #21F1EA
URxvt*color14: #36FFFC
!white
URxvt*color7: #F1F1F1
URxvt*color15: #FFFFFF

URxvt*font	    : xft:Bitstream Vera Sans Mono-10
URxvt*boldFont      : xft:Bitstream Vera Sans Mono:size=10:weight=bold
Urxvt*inheritPixmap : false
URxvt*scrollBar	    : false
URxvt*saveLines     : 2000
Urxvt*tintColor     : grey
Urxvt*cursorColor   : white

!Pour avoir le marquage des urls et les ouvrir avec FF
URxvt.perl-ext-common: matcher
URxvt.urlLauncher: firefox
URxvt.matcher.button: 1


! ---------[ URxvt ] ---------
xpdf*enableFreetype: yes
xpdf*antialias: yes
xpdf*foreground: black
xpdf*background: white
xpdf*urlCommand: /opt/mozilla/bin/firefox %s
xpdf*viKeys: on
