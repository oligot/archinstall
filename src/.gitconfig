[user]
    name = Olivier Ligot
[alias]
    # Human Git Aliases
    # http://gggritso.com/human-git-aliases
    branches = branch -a
    tags = tag
    stashes = stash list
    remotes = remote -v
    unstage = reset -q HEAD --
    discard = checkout --
    uncommit = reset --mixed HEAD~
    amend = commit --amend

    co = checkout
    br = branch
    ci = commit
    st = status
    di = diff
    dic = diff --cached -C
    last = log -1 HEAD
    bd = for-each-ref --sort=-committerdate refs/remotes/
[core]
    autocrlf = input
    whitespace = cr-at-eol
    excludesfile = ~/.gitignore
    pager = diff-so-fancy | less --tabs=4 -RFX
[push]
    default = simple
[merge]
    tool = vimdiff
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    untracked = yellow

# use separate file for username / github token / etc
[include]
    path = ~/.gitconfig.local
[diff]
    compactionHeuristic = true
[fetch]
	prune = true
