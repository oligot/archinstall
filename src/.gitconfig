[user]
    name = Olivier Ligot
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    di = diff
    dic = diff --cached -C
    unstage = reset HEAD --
    last = log -1 HEAD
    bd = for-each-ref --sort=-committerdate refs/remotes/
[core]
    autocrlf = input
    whitespace = cr-at-eol
    excludesfile = ~/.gitignore
    pager = diff-so-fancy | less --tabs=1,5 -R
[push]
    default = simple
[merge]
    tool = vimdiff
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    untracked = yellow

# use separate file for username / github token / etc
[include]
  path = ~/.gitconfig.local
